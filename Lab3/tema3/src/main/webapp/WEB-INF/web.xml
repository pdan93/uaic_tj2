<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>fish.payara.tema2.LogFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ValidateFilter</filter-name>
        <filter-class>fish.payara.tema2.ValidateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidateFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>languageDefault</param-name>
        <param-value>romanian</param-value>
    </context-param>
</web-app>
